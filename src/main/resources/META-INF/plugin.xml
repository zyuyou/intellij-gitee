        <projectConfigurable parentId="project.propVCSSupport.Mappings" groupWeight="-500"
                             instance="com.gitee.ui.GiteeSettingsConfigurable"/>

        <statistics.applicationUsagesCollector
            implementation="com.gitee.authentication.accounts.GiteeAccountsStatisticsCollector"/>

        <openapi.vcs.ui.cloneDialog.VcsCloneDialogExtension
                implementation="com.gitee.ui.cloneDialog.GiteeCloneDialogExtension"/>

