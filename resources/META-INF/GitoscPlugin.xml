<idea-plugin version="2">
    <extensions defaultExtensionNs="com.intellij">
        <checkoutProvider implementation="org.intellij.gitosc.extensions.GitoscCheckoutProvider"/>
        <applicationService serviceInterface="org.intellij.gitosc.util.GitoscSettings"
                            serviceImplementation="org.intellij.gitosc.util.GitoscSettings" />
        <projectService serviceInterface="org.intellij.gitosc.util.GitoscProjectSettings"
                        serviceImplementation="org.intellij.gitosc.util.GitoscProjectSettings"/>
        <vcsAnnotationGutterActionProvider implementation="org.intellij.gitosc.extensions.GitoscAnnotationGutterActionProvider" />
        <vcsConfigurableProvider implementation="org.intellij.gitosc.ui.GitoscSettingsConfigurable"/>
    </extensions>

    <extensions defaultExtensionNs="Git4Idea">
        <GitHttpAuthDataProvider implementation="org.intellij.gitosc.extensions.GitoscHttpAuthDataProvider" />
    </extensions>

    <actions>
        <action id="GitOSC.Share" class="org.intellij.gitosc.actions.GitoscShareAction">
            <add-to-group group-id="Vcs.Import"/>
        </action>
        <action id="GitOSC.Open.In.Browser" class="org.intellij.gitosc.actions.GitoscOpenInBrowserAction">
            <add-to-group group-id="EditorPopupMenu"/>
            <add-to-group group-id="ProjectViewPopupMenu"/>
            <add-to-group group-id="EditorTabPopupMenu"/>
            <add-to-group group-id="Git.LogContextMenu"/>
            <add-to-group group-id="Vcs.Log.ContextMenu"/>
            <add-to-group group-id="VcsHistoryActionsGroup"/>
        </action>
        <action id="GitOSC.Create.Gist" class="org.intellij.gitosc.actions.GitoscCreateGistAction">
            <add-to-group group-id="EditorPopupMenu"/>
            <add-to-group group-id="ProjectViewPopupMenu"/>
            <add-to-group group-id="EditorTabPopupMenu"/>
            <add-to-group group-id="ConsoleEditorPopupMenu"/>
        </action>
    </actions>
</idea-plugin>
