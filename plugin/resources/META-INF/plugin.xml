<idea-plugin url="https://gitee.com/oschina/intellij-gitosc" version="2" xmlns:xi="http://www.w3.org/2001/XInclude">
    <id>org.intellij.gitee</id>
    <vendor email="likui@oschina.cn">码云</vendor>
    <name>Gitee</name>
    <description>
      <![CDATA[
        Allows working with <a href="http://gitee.com/" >码云 - Gitee</a>
      ]]>
    </description>
    <change-notes>
      <![CDATA[
        <ul>
          <li>修改IDEA新的Git版本管理机制</li>
        </ul>
      ]]>
    </change-notes>

    <idea-version since-build="182.1" until-build="182.*"/>
    <depends>com.intellij.modules.lang</depends>
    <depends>Git4Idea</depends>
    <depends optional="true" config-file="META-INF/GiteeTracker.xml">com.intellij.tasks</depends>

    <xi:include href="META-INF/GiteePlugin.xml" xpointer="xpointer(/idea-plugin/*)">
        <xi:fallback>
            <xi:include href="/META-INF/GiteePlugin.xml" xpointer="xpointer(/idea-plugin/*)"/>
        </xi:fallback>
    </xi:include>
</idea-plugin>
